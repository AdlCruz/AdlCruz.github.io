	pmid = {34295910},
	pmcid = {PMC8290071},
	pages = {678047},
	file = {Raita_et_al_2021_Big_Data,_Data_Science,_and_Causal_Inference_-_A_Primer_for_Clinicians.pdf:C\:\\Users\\ArturodelaCruz\\OneDrive - London School of Hygiene and Tropical Medicine\\Resources\\ZotPDFs\\Raita_et_al_2021_Big_Data,_Data_Science,_and_Causal_Inference_-_A_Primer_for_Clinicians.pdf:application/pdf},
