	file = {ScienceDirect Snapshot:C\:\\Users\\ArturodelaCruz\\Zotero\\storage\\QPC5PTLP\\S0160412017301459.html:text/html;Tonne_et_al_2017_New_frontiers_for_environmental_epidemiology_in_a_changing_world.pdf:C\:\\Users\\ArturodelaCruz\\OneDrive - London School of Hygiene and Tropical Medicine\\Resources\\ZotPDFs\\Tonne_et_al_2017_New_frontiers_for_environmental_epidemiology_in_a_changing_world.pdf:application/pdf},
